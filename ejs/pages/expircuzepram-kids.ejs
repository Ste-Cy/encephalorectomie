      </div>
    </section>

    <section class="products-gallery">
      <h2>Nos autres produits</h2>
      <div class="products">
        <%- include('ejs/partials/shop.ejs') %>
      </div>
    </section>
  </main>

  <!-- ########## FOOTER ########## -->
  <footer>
    <%- include('ejs/partials/footer.ejs') %>
  </footer>
  <%- include('ejs/partials/scripts.ejs') %>
